<div class="content-wrapper">
	<h1><i class="fa fa-plus"></i> Dispatch a DragonFly</h1>
	<div class="form-wrapper">
		<%= form_for :test, url: tests_path do |f| %>

			<p>
				<%= f.label :app_type %></br>
				<%= f.radio_button(:app_type, "CMS", :onclick => 'check_value();') %>
				<%= f.label(:app_type, "CMS") %></br>
				<%= f.radio_button(:app_type, "CLW", :onclick => 'check_value();') %>
				<%= f.label(:app_type, "CLW") %>
			</p>

			<p>
				<%= f.label :app_name %></br>
				<%= f.text_field :app_name %>
			</p>

			<p id="test-selector" style="display:none;">
				<%= f.label :choose_test %></br>
				<%= f.select( :choose_test, "
											<optgroup id='cms-tests'>
												<option id='cms-tests-1'>JS Console Errors</option>
												<option>Status Codes</option>
											</optgroup>
											<optgroup id='clw-tests'>
												<option id='clw-tests-1'>JS Console Errors</option>
												<option>Status Codes</option>
											</optgroup>
											"
				.html_safe) %>
			</p>

			<p id="submiter" style="display:none;">
			    <%= f.submit(:onclick => 'show_load();') %>
			</p>
		<% end %>
	</div>
</div>
